generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String @id @default(cuid()) @map("_id")
  name            String?
  username        String?
  password        String?
  image           String?
  email           String @unique
  emailVerified   DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  accounts      Account[]
  class           Class[]
}
model Class {
  id        String   @id @default(cuid()) @map("_id")
  course    String
  year      Int
  section   String
  program   String
  variant   String
  teacherId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teacher   User     @relation(fields: [teacherId], references: [id])
  students Student[] // Represents the many-to-many relationship
  tests           Test[]
}

model Student {
  id        String   @id @default(cuid()) @map("_id")
  lastName  String
  firstName  String
  middleName  String
  rollNumber Int @unique
  classId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  studentGrade StudentGrade[]
  class   Class     @relation(fields: [classId], references: [id])
}


model StudentGrade {
  id         String @id @default(cuid()) @map("_id")
  processedImage  String
  numberOfCorrect Int
  numberOfIncorrect Int
  answerIndices Int[]
  studentId     String
  testId         String

  student  Student @relation(fields: [studentId], references: [id])
  test  Test @relation(fields: [testId], references: [id])
}

model Test {
  id              String @id @default(cuid()) @map("_id")
  testName        String
  totalQuestions  Int
  numberOfChoices Int
  answerIndices   Int[]
  points          Int
  classId         String
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  studentTest     StudentGrade[]
  class           Class @relation(fields: [classId], references: [id])
}

model Account {
  id                 String @id @default(cuid()) @map("_id")
  userId             String
  type               String
  provider           String
  providerAccountId  String @map("provider_account_id")
  refresh_token      String? @db.String
  access_token       String? @db.String
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.String
  session_state      String?

  user             User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}



